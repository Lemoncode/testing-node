{
  "name": "testing-node",
  "version": "1.0.0",
  "description": "Testing a Node + Express project with Mocha, Chai, Sinon, Jest, Jest + Chai",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd .env npm run start:env",
    "start:env": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "npm run build && gulp dev --gulpfile config/gulp/dev.js",
    "start:prod": "node public/app.js",
    "build": "gulp build --gulpfile config/gulp/base.js",
    "test": "jest --verbose",
    "test:watch": "jest --watchAll --verbose -i"
  },
  "keywords": [
    "testing",
    "node",
    "express",
    "samples"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemoncode/testing-node.git"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lemoncode/testing-node/issues"
  },
  "homepage": "https://github.com/Lemoncode/testing-node#readme",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.3",
    "env-cmd": "^7.0.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-sourcemaps": "^1.12.1",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.4",
    "if-env": "^1.0.0",
    "jest": "^22.4.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  },
  "jest": {
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "restoreMocks": true
  }
}
